<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Smart Guard Portal @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Site.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
           
                <div>
                    @* <p class="site-title">@Html.ActionLink("SMART GUARD", "Index", "Home")</p> *@
                    
                    <table width="100%">
                        <tr>
                            <td width="20%" />
                            <td width="60%">
                                @Html.Partial("_LoginPartial")
                            </td>
                            <td width="20%">
                                <section id="login">
                         
                                    <img src="@Url.Content("~/Content/images/Germany-icon.png")" width="50px" onclick="" />
                                    <img src="@Url.Content("~/Content/images/Austria-icon.png")" width="50px" />
                                    @*Request.Headers["Host"]*@
                        
                                </section>
                            </td>
                        </tr>
                    </table>
                </div>
                
           
        </header>
        <table width="100%">
            <tr>
                <td></td>
                <td width="100%" align="left">
                    <div id="body">
                        @RenderSection("featured", required: false)
                        <section class="content-wrapper main-content clear-fix">
                            @RenderBody()
                        </section>
                    </div>
                </td>
                <td></td>
            </tr>
        </table>
        
        <footer>
            <div class="content-wrapper">
                <div align="center">
                    <p>
                        @Html.ActionLink("About Us", "Index", "Home") |
                        @Html.ActionLink("Contact","Create", "ContactUs") <br /> 
                        @Html.ActionLink("Privacy Policy", "About", "Home") | 
                        @Html.ActionLink("Terms and Conditions", "Contact", "Home")
                    </p>
                </div>
                <div class="float-right">
                    <p>&copy; SmartGuard @DateTime.Now.Year </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
