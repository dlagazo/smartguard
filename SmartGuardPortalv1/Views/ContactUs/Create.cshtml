    List<SmartGuardPortalv1.Models.Distributor> distros = context.Distributors.ToList();

    var listDistros = new List<SelectListItem>();
    int count = 0;
    listDistros.Add(new SelectListItem { Text = "Select", Value = "-1" });
    foreach(var distro in distros)
    {
        listDistros.Add(new SelectListItem { Text = distro.name, Value = count.ToString() });
        count++;
    }
    
              
    
