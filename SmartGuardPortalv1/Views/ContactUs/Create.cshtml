    function calculateTotalPackage(pack)
    {
       // alert(pack.getAttribute("price"));
        //alert(pack.options[pack.selectedIndex].getAttribute("price"));
        document.getElementById("totalPackage").value = pack.options[pack.selectedIndex].getAttribute("price");
        var totalAddons = parseInt(document.getElementById("totalAddons").value, 0);
        var totalPackage = parseInt(document.getElementById("totalPackage").value, 0);
        document.getElementById("totalAmt").value = ((totalAddons + totalPackage)*1.12);
    }

    function calculateTotalAddons(box)
    {
        //alert(box.getAttribute("price"));
        if(box.checked)
        {
            var boxVal = parseInt(box.getAttribute("price"), 0);
            var currVal = parseInt(document.getElementById("totalAddons").value, 0);
            var newVal = boxVal + currVal;
            document.getElementById("totalAddons").value = newVal;
        }
        else if (!box.checked) {
            var boxVal = parseInt(box.getAttribute("price"), 0);
            var currVal = parseInt(document.getElementById("totalAddons").value, 0);
            var newVal = currVal - boxVal;
            document.getElementById("totalAddons").value = newVal;

        }
        var totalAddons = parseInt(document.getElementById("totalAddons").value, 0);
        var totalPackage = parseInt(document.getElementById("totalPackage").value, 0);
        document.getElementById("totalAmt").value = (totalAddons + totalPackage) * 1.12;
    }

    function submitApplicationForm()
    {
        var sel = document.getElementById("ddDistros");
        if(sel.options[sel.selectedIndex].value == -1)
        {
            alert("Please select a distributor");
        }
        else
        {
            
            //alert(sel.options[sel.selectedIndex].value);
            var pack = document.getElementById("package");
            var packages = document.getElementById("packages");
            var packValue = pack.options[pack.selectedIndex].value;
            var addons = document.getElementsByName("addons");
            var packagesString = packValue + ",";

            for (var i = 0; i < addons.length; i++)
            {
                if(addons[i].type == "checkbox")
                {
                    if(addons[i].checked)
                    {
                        //alert("checked");
                        packagesString += addons[i].getAttribute("value") + ",";
                    }
                }
            }

            packages.setAttribute("value",packagesString);
            
            

            document.getElementById("formApply").submit();
        }

    }

    function init()
    {
        @foreach(var distro in distros)
        {
            <text>distro_name.push("@distro.name");</text>
