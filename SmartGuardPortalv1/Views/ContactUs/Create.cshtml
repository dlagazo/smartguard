<script>
    var distro_name = new Array(), distro_lat = new Array(), distro_lng = new Array(),
        distro_email = new Array(), distro_phone = new Array()
        distro_mobile = new Array(), distro_address = new Array();
    
    function selectDistro(index)
    {
        if (index != -1)
        {
            document.getElementById("distroName").innerHTML = "Distributor: " + distro_name[index - 1];
            document.getElementById("distroAdd").innerHTML = "Address: " + distro_address[index - 1];
            document.getElementById("distroTel").innerHTML = "Telephone: " + distro_phone[index - 1];
            document.getElementById("distroMob").innerHTML = "Mobile: " + distro_mobile[index - 1];
            document.getElementById("distroEmail").innerHTML = "Email: " + distro_email[index - 1];
            document.getElementById("map").setAttribute("src", 
                "https://maps.googleapis.com/maps/api/staticmap?center="
                + distro_lat[index-1] + "," + distro_lng[index-1] +
                "&zoom=10&size=600x200&maptype=roadmap&markers=color:red%7Clabel:P%7C " 
                + distro_lat[index - 1] + "," + distro_lng[index - 1] 
                +"&key=AIzaSyClGFiboSom1LT8N4QMT2TlbXXh4-TyFLI");
        }
        //alert(index);
        
    }

    function init()
    {
        @foreach(var distro in distros)
        {
            <text>distro_name.push("@distro.name");</text>
            <text>distro_lat.push("@distro.lat");</text>
            <text>distro_lng.push("@distro.lng");</text>
            <text>distro_phone.push("@distro.telephone");</text>
            <text>distro_email.push("@distro.email");</text>
            <text>distro_mobile.push("@distro.mobile");</text>
            <text>distro_address.push("@distro.address");</text>
            
        }
    }

    

    window.onload = init;
</script>



