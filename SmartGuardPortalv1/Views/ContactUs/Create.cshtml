                        <br />
                        <div style="text-align:left;width:90%;background-color:cyan;border: 1px solid black;color:black;padding:10px">
                            @{
                                foreach (var item in items)
                                {
                                    if (item.type == 2)
                                    {
                                        <input type="checkbox" name="addons" value="@item.id" price="@item.amount" onchange="calculateTotalAddons(this)"/> <text>@item.title</text>
                                        <br />
                                    }
                                }
                            }



                            
                        </div>
                    </td>
                    <td style="width:2%"><span></span></td>
                    <td style="width:32%;text-align:center;">
                        Price:
                        <br />
                        <div style="text-align:left;width:90%;border:1px solid black;color:black;height:100%;padding:10px">
                            Package: &euro; <input type="text" contenteditable="false" id="totalPackage" value="@listPrice.First().Value" />
                            <br />
                            Total Addons: &euro; <input type="text" contenteditable="false" id="totalAddons" value="0"/>
                            <br />
                           
                            VAT: &euro;12%
                            <br />
                            ______________________
                            <br />
                            Total: &euro; <input type="text" contenteditable="false" id="totalAmt" value="@defaultTotal" />


                        </div>
                    </td>

                </tr>

            </table>

        </div>
        <br />
        <div style="width:100%; border: 1px solid black">
            <p class="pitch-list__content" style="text-align:left">
                <b>3. Payment Method</b>
            </p>
            <table style="width:100%">
                <tr>
                    <td style="width:32%;text-align:center">
                        Choose Channel
                        <br />
                        <div style="text-align:left;width:90%;background-color:blue;border: 1px solid black;color:white;height:100%;padding:10px">
                            <select name="payMethod">
                                <option value="0">Credit Card</option>
                                <option value="1">Bank Transfer</option>
                                <option value="2">Debit</option>
                            </select>

                        </div>
                    </td>
                    <td style="width:2%"><span></span></td>
                    <td style="width:32%;text-align:center">
                        Exchange Data:
                        <br />
                        <div style="text-align:left;width:90%;background-color:cyan;border: 1px solid black;color:black;padding:10px">
                            HSBC
                            <br />
                            IBAN: SHKD7834638dhk7384
                            <br />
                            BIC: HSBCCCBSA
                        </div>
                    </td>
                    <td style="width:2%"><span></span></td>
                    <td style="width:32%;text-align:center;">

                        <br />
                        <div style="text-align:left;width:90%;border:1px solid black;color:black;height:100%;padding:10px">
                            As soon as your payment is received, the persons under 1 & 2 above will
                            get an email with login and shipment tracking.

                        </div>
                    </td>

                </tr>

            </table>
            <input type="hidden" name="packages" id="packages"/>
            <input type="hidden" name="fkDistroId" id="fkDistroId" />
            <br />
            <input type="button" value="ORDER" onclick="submitApplicationForm();" />
        </div>



        <br />
    }
    </div>

    
            </article>
        </section>

    

</body>
