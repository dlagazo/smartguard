            </table>

        </div>
        <br />
        <div style="width:100%; border: 1px solid black">
            <p class="pitch-list__content" style="text-align:left">
                <b>3. Product </b>
            </p>
            <table style="width:100%">
                <tr>
                    <td style="width:32%;text-align:center">
                        Package:
                        <br />
                        <div style="text-align:left;width:90%;background-color:blue;border: 1px solid black;color:white;height:100%;padding:10px">
                            <select id="package" onchange="calculateTotalPackage(this)">
                                @{
                                    foreach (var item in listItems)
                                    {
                                        <option value="@item.Value" price="@listPrice[Int32.Parse(item.Value)]">@item.Text</option>
                                    }
                                }


                            </select>
                            <br />
                            <input type="radio" name="payFreq" value="0"> Monthly
                            <br />
                            <input type="radio" name="payFreq" value="1"> 1 year
                            <br />
                            <input type="radio" name="payFreq" value="2"> 1 year Automatic Renewal
                        </div>
                    </td>
                    <td style="width:2%"><span></span></td>
                    <td style="width:32%;text-align:center">
