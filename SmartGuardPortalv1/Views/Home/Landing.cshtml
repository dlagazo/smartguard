                    <p class="pitch-list__content"> Please check your email for a new temporary password </p>
                    @using (Html.BeginForm("Reset", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <input id="Email" name="Email" value="email address"/>
                        <br />
                        <br />
                        <input type="submit" value="Reset password" style="background-color:#ff4444" />
                     

                    }
                    <p class="pitch-list__content">_________________________________________________________________</p>

                    <br />

                    <p class="pitch-list__content"> If you are a <u><b><i>new contact person,</i></b></u> please download and install app before registering </p>

             
