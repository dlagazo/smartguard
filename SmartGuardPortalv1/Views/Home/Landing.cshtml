                    <h3 class="lp-data-col__resizing-heading-2 lp-data-col--subtitle lvl-3--lc mbm cf color-black"> Welcome to your SMARTGUARD Web Portal </h3>
                    <br />
                    <p class="pitch-list__content"> If you have <u><b><i>already registered</i></b></u>  or <u><b><i>received an invitation with login details</i></b></u> </p>
                    
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <table style="width:100%;vertical-align:text-top">
                            <tr>
                                <td style="text-align:right">
                                    <p class="pitch-list__content"> enter the <b>login</b> </p>

